{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "./assets/**"],
  "compilerOptions": {
    "lib": [
        "dom",
        "es2015",
        "es2016"
    ],
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "sourceMap": true,
  }
}
